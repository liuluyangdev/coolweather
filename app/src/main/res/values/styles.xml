<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SettingTextStyle">
        <item name="android:clickable">true</item>
        <item name="android:padding">@dimen/common_dimen_mid</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/setting_text_height</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:textColor">@color/main_text_black</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="popwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <!-- 指定显示的动画xml -->

        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
        <!-- 指定消失的动画xml -->
    </style>

</resources>
